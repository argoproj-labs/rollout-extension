{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "declaration": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,    
    "resolveJsonModule": true,
    "downlevelIteration": true ,
    "lib": ["es2017", "dom"]
  },
  "include": ["./**/*"],
  "exclude": ["node_modules"]
} 
